<%- include("./partials/head") %>

    <body class="background-green textcolor-white text-center">

        <div class="container">

            <div class="row">

                <!-- Headings -->
                <div class="col">
                    <h1 class="textsize-8 mb-5">rpu</h1>
                    <h2 class="textsize-2 mb-3">sign up</h2>
                </div>

            </div>

            <!-- Sign Up Form -->
            <form action="/signup" method="POST" class="mb-5">

                <!-- Account Name Input -->
                <div class="row justify-content-center mb-3">

                    <label for="username">name</label>
                    <div class="col-6 col-md-5 col-lg-4 col-xl-3">
                        <input type="text" class="form-control" name="username" autofocus>
                    </div>

                </div>

                <!-- Password Input -->
                <div class="row justify-content-center mb-4">

                    <label for="password">password</label>
                    <div class="col-6 col-md-5 col-lg-4 col-xl-3">
                        <input type="password" class="form-control" id="password" name="password">
                    </div>

                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn button-white btn-lg rounded-pill mb-3">sign up</button>

            </form>

            <!-- Log In and Go Back Navigation Buttons -->
            <div class="row row-cols-1 mb-5">

                <!-- Log In Button -->
                <div class="col mb-3">
                    <p>already have an account?</p>
                    <a class="btn button-white rounded-pill mb-3" href="/login" role="button"><strong>log in!</strong></a>
                </div>

                <!-- Back Button -->
                <div class="col">
                    <a class="btn button-white rounded-pill" href="./" role="button">back</a>
                </div>
            </div>

        </div>
        

<%- include("./partials/copyright") %>