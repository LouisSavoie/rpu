<%- include("../partials/head") %>
<%- include("../partials/header") %>

<div class="container text-center">

    <div class="row">

        <!-- Headings -->
        <div class="col">
            <h2 class="textsize-2 mb-3">create new post</h2>
        </div>

    </div>

    <!-- New Post Form -->
    <form action="/characters/<%= character._id %>/posts" method="POST" class="row justify-content-center">
        <div class="col-8 info-panel p-4 mb-5">

            <div class="row justify-content-center mb-4">

                <!-- Post Skill Input -->
                <label class="textcolor-green" for="text">pick a skill</label>
                <div class="col-8 col-sm-7 col-md-5 col-lg-4 col-xl-3">
                    <select class="form-select" name="post[skill]">
                        <!-- Iterate through Skills Array -->
                        <% character.skills.forEach((skill) => { %>
                            <option value="<%= skill._id %>"><%= skill.name %></option>
                        <% }) %>
                    </select>
                </div>

            </div>

            <div class="row justify-content-center mb-4">

                <!-- Post Text Input -->
                <label class="textcolor-green" for="text">details</label>
                <div class="col-8 col-sm-7 col-md-5 col-lg-4 col-xl-3">
                    <textarea class="form-control" name="post[text]" maxlength="16" autofocus></textarea>
                </div>

            </div>

            <div class="row justify-content-center mb-4">

                <!-- Post Image URL Input -->
                <label class="textcolor-green" for="image">image url</label>
                <div class="col-6 col-md-5 col-lg-4 col-xl-3">
                    <input type="text" class="form-control" name="post[image]">
                </div>

            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn button-green btn-lg rounded-pill">post!</button>

            </div>

    </form>

</div>

<%- include("../partials/footer") %>